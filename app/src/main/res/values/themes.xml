<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme -->
    <style name="Theme.ColorSensor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_color_sensor</item>
        <item name="postSplashScreenTheme">@style/Theme.ColorSensor</item>
    </style>

</resources>
